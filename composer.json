{
    "name": "cityofhelsinki/pelikirja",
    "type": "project",
    "license": "MIT",
    "description": "Pelikirja composer json",
    "repositories": [
      {
        "type": "composer",
        "url": "https://wpackagist.org",
        "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
      }
    ],
    "require": {
      "php": ">=7.4",
      "johnpbloch/wordpress-core-installer": "^2.0",
      "johnpbloch/wordpress-core": "^5.9.0",
      "wp-cli/wp-cli": "^2.5.0",
      "composer/installers": "^1.11",
      "symfony/finder": "=4.4.36",
      "wpackagist-plugin/contact-form-7": ">=5.3",
      "wpackagist-plugin/query-monitor": "^3.7",
      "wpackagist-plugin/duplicate-page": ">=4.3",
      "wpackagist-plugin/svg-support": ">=2.3",
      "wpackagist-plugin/twentig": ">=1.2",
      "wpackagist-plugin/ultimate-addons-for-gutenberg": ">=1.20",
      "wpackagist-plugin/wp-smushit": ">=3.8",
      "wpackagist-plugin/wordpress-seo": ">16.0",
      "inpsyde/wp-translation-downloader": "^2.0"
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "^3.6.0",
      "roave/security-advisories": "dev-master"
    },
    "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
      "wordpress-install-dir": "/opt/app-root/src",
      "installer-paths": {
        "wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
        "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
        "wp-content/themes/{$name}/": ["type:wordpress-theme"]
      },
      "wp-translation-downloader": {
        "languages": [
          "fi",
          "sv_SE"
        ],
        "directory": "wp-content/languages"
      }
    },
    "scripts": {
      "post-install-cmd": [],
      "test": [
        "phpcs"
      ]
    }
}
